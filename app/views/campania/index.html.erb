<div align="center"><h1>CAMPAÑAS</h1></div></br>
</br></br>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>NOMBRE DE LA CAMPAÑA</th>
      <th>INICIO DE LA CAMPAÑA</th>
      <th colspan="3"> OPCIONES </th>
    </tr>
  </thead>

  <tbody>
    <% @campania.each do |campanium| %>
      <tr>
        <td><%= campanium.IdCampania %></td>
        <td><%= campanium.Nombre_Campania %></td>
        <td><%= campanium.Tiempo_Campania %></td>
        <td><%= link_to 'VER', campanium %></td>
        <td><%= link_to 'EDITAR', edit_campanium_path(campanium) %></td>
        <td><%= link_to 'BORRAR', campanium, method: :delete, data: { confirm: 'ESTAS SEGURO?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
